@page "/events"
@using MyEventBlazorApp.Services
@using MyEventsAdoNetDB.Entities
@inject IEventsService EventsService

<p class="heading">CSS Gallery</p>

@if (events == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Phone Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in events)
            {
                <tr>
                    <td>@contact.Id</td>
                    <td>@contact.Name</td>
                    <td>@contact.User_id</td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="gallery-image">
    <div class="img-box">
        <img src="https://picsum.photos/350/250?image=444" alt="" />
        <div class="transparent-box">

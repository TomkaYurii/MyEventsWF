        <div class="transparent-box">
            <div class="caption">
                <p>Night Sky</p>
                <p class="opacity-low">Cinematic</p>
            </div>
        </div>
    </div>
    <div class="img-box">
        <img src="https://picsum.photos/350/250/?image=431" alt="" />
